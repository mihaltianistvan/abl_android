        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:shrinkColumns="1,2">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:text="Large Text"
            android:id="@+id/title"/>
        <TextView
            android:text="Large Text"/>
        <TextView
            android:text="Large Text"/>
    </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:text="Large Text"
                android:id="@+id/team"/>
            <TextView
                android:text="Large"
                android:id="@+id/points"/>
            <TextView
                android:text="Large Text"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
